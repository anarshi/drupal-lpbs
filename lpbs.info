;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

; Container
; --------------
settings[lpbs_fluid_container] = 0

; Buttons
; --------------
settings[lpbs_button_size] = ''
settings[lpbs_button_colorize] = 1
settings[lpbs_button_iconize] = 1

; Images
; --------------
settings[lpbs_image_shape] = ''
settings[lpbs_image_responsive] = 1

; Tables
; --------------
settings[lpbs_table_bordered] = 0
settings[lpbs_table_condensed] = 0
settings[lpbs_table_hover] = 1
settings[lpbs_table_striped] = 1
settings[lpbs_table_responsive] = 1

; Breadcrumbs
; --------------
settings[lpbs_breadcrumb] = 1
settings[lpbs_breadcrumb_home] = 0
settings[lpbs_breadcrumb_title] = 1

; Navbar
; --------------
settings[lpbs_navbar_position] = ''
settings[lpbs_navbar_inverse] = 0

; Pager
; --------------
settings[lpbs_pager_first_and_last] = 1

; Region Wells
; --------------
settings[lpbs_region_well-navigation] = ''
settings[lpbs_region_well-header] = ''
settings[lpbs_region_well-highlighted] = ''
settings[lpbs_region_well-help] = ''
settings[lpbs_region_well-content] = ''
settings[lpbs_region_well-sidebar_first] = 'well'
settings[lpbs_region_well-sidebar_second] = ''
settings[lpbs_region_well-footer] = ''

; Anchors
; --------------
settings[lpbs_anchors_fix] = 0
settings[lpbs_anchors_smooth_scrolling] = 0

; Forms
; --------------
settings[lpbs_forms_required_has_error] = 0
settings[lpbs_forms_has_error_value_toggle] = 1
settings[lpbs_forms_smart_descriptions] = 1
settings[lpbs_forms_smart_descriptions_limit] = 250
settings[lpbs_forms_smart_descriptions_allowed_tags] = 'b, code, em, i, kbd, span, strong'

; Popovers
; --------------
settings[lpbs_popover_enabled] = 1
settings[lpbs_popover_animation] = 1
settings[lpbs_popover_html] = 0
settings[lpbs_popover_placement] = 'right'
settings[lpbs_popover_selector] = ''
settings[lpbs_popover_trigger]['hover'] = 0
settings[lpbs_popover_trigger]['focus'] = 0
settings[lpbs_popover_trigger]['click'] = 'click'
settings[lpbs_popover_trigger_autoclose] = 1
settings[lpbs_popover_title] = ''
settings[lpbs_popover_content] = ''
settings[lpbs_popover_delay] = 0
settings[lpbs_popover_container] = 'body'

; Tooltips
; --------------
settings[lpbs_tooltip_enabled] = 1
settings[lpbs_tooltip_animation] = 1
settings[lpbs_tooltip_html] = 0
settings[lpbs_tooltip_placement] = 'auto left'
settings[lpbs_tooltip_selector] = ''
settings[lpbs_tooltip_trigger]['hover'] = 'hover'
settings[lpbs_tooltip_trigger]['focus'] = 'focus'
settings[lpbs_tooltip_trigger]['click'] = 0
settings[lpbs_tooltip_delay] = 0
settings[lpbs_tooltip_container] = 'body'

; Advanced
; --------------
settings[lpbs_cdn_provider] = 'jsdelivr'
settings[lpbs_cdn_custom_css] = 'https://cdn.jsdelivr.net/bootstrap/3.3.5/css/bootstrap.css'
settings[lpbs_cdn_custom_css_min] = 'https://cdn.jsdelivr.net/bootstrap/3.3.5/css/bootstrap.min.css'
settings[lpbs_cdn_custom_js] = 'https://cdn.jsdelivr.net/bootstrap/3.3.5/js/bootstrap.js'
settings[lpbs_cdn_custom_js_min] = 'https://cdn.jsdelivr.net/bootstrap/3.3.5/js/bootstrap.min.js'
settings[lpbs_cdn_jsdelivr_version] = '3.3.5'
settings[lpbs_cdn_jsdelivr_theme] = 'lpbs'

; Global
; --------------
settings[toggle_name] = 1
settings[toggle_search] = 1

; jQuery Update
; --------------
settings[jquery_update_jquery_version] = 2.1

